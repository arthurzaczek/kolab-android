<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/LinearLayout11"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_width="fill_parent">
			<ImageButton android:maxWidth="100px" android:minHeight="100px"
				android:layout_width="wrap_content" android:layout_marginTop="5px"
				android:minWidth="100px" android:maxHeight="100px" android:id="@+id/EditPhotoButton"
				android:layout_height="wrap_content"></ImageButton>
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Remove Photo"
				android:id="@+id/EditRemovePhotoButton"></Button>
		</LinearLayout>
		<TextView android:text="Summary" android:textStyle="bold"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="20dp" android:layout_marginTop="20dp" />

		<TextView android:id="@+id/TextView05" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:text="Firstname:" />
		<EditText android:id="@+id/EditFirstName"
			android:layout_height="wrap_content" android:layout_width="fill_parent" android:inputType="textPersonName"/>
		<TextView android:id="@+id/TextView06" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Lastname:"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/EditLastName"
			android:layout_width="fill_parent" android:inputType="textPersonName"/>

		<TextView android:text="Phone" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textStyle="bold"
			android:textSize="20dp" android:layout_marginTop="20dp" />

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/TextPhoneHome"
			android:text="Home:" />
		<EditText android:id="@+id/EditPhoneHome"
			android:layout_height="wrap_content" android:layout_width="fill_parent" android:inputType="phone"/>
		<TextView android:id="@+id/TextView02" android:text="Mobile:"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />
		<EditText android:id="@+id/EditPhoneMobile"
			android:layout_height="wrap_content" android:layout_width="fill_parent" android:inputType="phone"/>
		<TextView android:id="@+id/TextView03" android:text="Work:"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />
		<EditText android:id="@+id/EditPhoneWork"
			android:layout_height="wrap_content" android:layout_width="fill_parent" android:inputType="phone"/>

		<TextView android:text="Email" android:textStyle="bold"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="20dp" android:layout_marginTop="20dp" />

		<TextView android:id="@+id/TextEmail" android:text="Email:"
			android:layout_height="wrap_content" android:layout_width="fill_parent" />
		<EditText android:id="@+id/EditEmailHome"
			android:layout_height="wrap_content" android:layout_width="fill_parent" android:inputType="textEmailAddress"/>

		<TextView android:text="More" android:textStyle="bold"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="20dp" android:layout_marginTop="20dp" />

		<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Birthday:" />
		<EditText android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/EditBirthday" android:inputType="date"/>
		<TextView android:id="@+id/TextView04" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Notes:" />
		<EditText android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/EditNotes" android:inputType="textImeMultiLine"/>
	</LinearLayout>
</ScrollView>
